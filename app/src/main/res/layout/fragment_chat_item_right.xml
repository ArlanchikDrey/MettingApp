<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"

	android:layout_marginStart="60dp"
	android:layout_marginEnd="4dp"
	android:layout_marginVertical="4dp"

	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:id="@+id/contentMessageChat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="end"
		android:layout_alignParentEnd="true"
		android:background="@drawable/fragment_chat_message_right"
		android:orientation="vertical">

		<ImageView android:id="@+id/ivChatMessagePhoto"
			android:layout_width="200dp"
			android:layout_height="250dp"
			android:layout_margin="10dp"
			android:layout_gravity="center"
			android:contentDescription="@string/chat_message_my_attach_img_description"
			android:visibility="visible"/>

		<TextView android:id="@+id/tvChatMessageText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:padding="12dp"
			android:text="@string/default_message_text"
			android:textIsSelectable="true"
			/>

	</LinearLayout>

</RelativeLayout>