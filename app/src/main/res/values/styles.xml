

<resources>
	
	<!-- circle button with icon at center -->
	<style name="MyButtonIconOnly" parent="Widget.MaterialComponents.Button.Icon">
		
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
	<!-- button with icon at center -->
	<style name="MyButtonIconOnly.Text" parent="Widget.MaterialComponents.Button.TextButton.Icon">
		
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		
		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
	<!-- button with icon at center -->
	<style name="MyButtonIconOnly.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
		
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
	<!-- circle button with icon at center -->
	<style name="MyButtonIconOnly.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
		
		<item name="iconSize">24dp</item>
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
		
	</style>
	
	<style name="My.Widget.TextView" parent="@style/Widget.MaterialComponents.TextView">
		<item name="android:textAppearance">@style/My.TA.Body1</item>
	</style>
	
	<!-- provided by theme settings vert dots style -->
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<!-- custom appearance pop up menu items -->
	<style name="MyMenuPopupStyle" parent="Widget.AppCompat.PopupMenu">
		<item name="android:itemBackground">@color/colorPrimary</item>
	</style>

	<!-- display menu popup under toolbar -->
	<style name="MyOverFlowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
		<item name="android:overlapAnchor">false</item>
		<item name="android:dropDownVerticalOffset">5dp</item>
	</style>

	

	<style name="MyConfirmationAlertDialog.ButtonPositive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
		<item name="backgroundTint">@color/material_red_a700</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAllCaps">false</item>
		<item name="rippleColor">@color/material_red_a700</item>
	</style>

	<style name="MyConfirmationAlertDialog.ButtonNegative" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:layout_marginEnd">8dp</item>
		<item name="strokeColor">@color/material_blue_a700</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAllCaps">false</item>
		<item name="rippleColor">@color/lolite</item>
	</style>


</resources>